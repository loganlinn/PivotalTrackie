<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout style="@style/TitleBar">
		<TextView style="@style/TitleBarText" android:id="@+id/tv_title_bar_title" android:text="@string/activity_home_title"></TextView>
		<ImageView style="@style/TitleBarSeparator" />
		<ImageButton style="@style/TitleBarAction" android:id="@+id/btn_title_refresh"
			android:contentDescription="" android:src="@drawable/ic_title_refresh"
			android:onClick="onRefreshClick" />
		<ProgressBar style="@style/TitleBarProgressIndicator"
			android:id="@+id/title_refresh_progress" android:visibility="gone" />

	</LinearLayout>
	<ListView android:orientation="vertical" android:id="@+id/lv_home"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:padding="6dip">
	</ListView>
</LinearLayout>
